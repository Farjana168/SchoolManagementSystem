@model SchoolManagementSystem.Models.TeacherTable

<form method="post" asp-controller="Teacher" asp-route-Id="@Model.TeacherId" asp-action="DeletePost">
    <input asp-for="TeacherId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Teacher Information</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherId" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherName" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherPhone"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherPhone" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherEmail"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherEmail" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherAddress" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherGender"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherGender" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TeacherDOB"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherDOB" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>


    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}