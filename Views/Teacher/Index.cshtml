@model IEnumerable<SchoolManagementSystem.Models.TeacherTable>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Teacher List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Teacher" asp-action="Create" class="btn btn-success">
                Add New Teacher
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        TeacherId
                    </th>
                    <th>
                        TeacherName
                    </th>
                    <th>
                        TeacherPhone
                    </th>
                    <th>
                        TeacherEmail
                    </th>
                    <th>
                        TeacherAddress
                    </th>
                    <th>
                        TeacherGender
                    </th>
                    <th>
                        TeacherDOB
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="5%">@obj.TeacherId</td>
                    <td width="10%">@obj.TeacherName</td>
                    <td width="10%">@obj.TeacherPhone</td>
                    <td width="15%">@obj.TeacherEmail</td>
                    <td width="15%">@obj.TeacherAddress</td>
                    <td width="5%">@obj.TeacherGender</td>
                    <td width="5%">@obj.TeacherDOB</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Teacher" asp-route-Id="@obj.TeacherId" asp-action="Edit" class="btn btn-primary mx-1">
                                Edit
                            </a>
                            <br />
                            <a asp-controller="Teacher" asp-route-Id="@obj.TeacherId" asp-action="Delete" class="btn btn-danger mx-1 mr-4">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Teacher Exits</p>
    }
</div>
