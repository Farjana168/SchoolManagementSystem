@model SchoolManagementSystem.Models.StudentTable

<form method="post" asp-controller="Student" asp-route-Id="@Model.StudentId" asp-action="DeletePost">
    <input asp-for="StudentId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Student Information</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StudentId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StudentId" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StudentName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StudentName" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StudentPhone"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StudentPhone" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StudentGender"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StudentGender" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StudentAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StudentAddress" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>


    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}