@model IEnumerable<SchoolManagementSystem.Models.StudentTable>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Student" asp-action="Create" class="btn btn-success">
                Add New Student
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        StudentId
                    </th>
                    <th>
                        StudentName
                    </th>
                    <th>
                        StudentPhone
                    </th>
                    <th>
                        StudentGender
                    </th>
                    <th>
                        StudentAddress
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%">@obj.StudentId</td>
                    <td width="20%">@obj.StudentName</td>
                    <td width="20%">@obj.StudentPhone</td>
                    <td width="10%">@obj.StudentGender</td>
                    <td width="20%">@obj.StudentAddress</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Student" asp-route-Id="@obj.StudentId" asp-action="Edit" class="btn btn-primary mx-1">
                                Edit
                            </a>
                            <a asp-controller="Student" asp-route-Id="@obj.StudentId" asp-action="Delete" class="btn btn-danger mx-1">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Student Exits</p>
    }
</div>
